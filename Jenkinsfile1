pipeline {
    agent any

    environment {
        ARTIFACTORY_URL = 'https://luxproject.luxoft.com/artifactory'
        REPO = 'hgnsd-git_lfs'
        CREDENTIALS = 'art_cred'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Artifactory Upload') {
            steps {
                script {
                    CMsg = sh(
                    script: "git log -1 --pretty=%s | cut -c1-11",
                    returnStdout: true).trim()
                   
                    def server = Artifactory.server('art_cred')

                    def uploadSpec = """{
                      "files": [{
                        "pattern": "log.*",
                        "target": "$REPO/${CMsg}/"
                      }]
                    }"""

                    server.upload spec: uploadSpec, failNoOp: true


                }

            }
        }
    }
}